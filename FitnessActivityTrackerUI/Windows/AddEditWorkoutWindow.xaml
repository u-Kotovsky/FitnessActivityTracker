<Window x:Class="FitnessActivityTrackerUI.Windows.AddEditWorkoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessActivityTrackerUI.Windows"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        mc:Ignorable="d"
        Title="Добавить или изменить тренировку" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
      
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">Тип тренировки</Label>
            <ComboBox Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" ItemsSource="{Binding WorkoutTypes}"/>

            <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Center">Дата и время</Label>
            <wpfTool:DateTimePicker Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Value="{Binding Date}"/>

            <Label Grid.Column="0" Grid.Row="2" VerticalAlignment="Center">Продолжительность</Label>
            <wpfTool:DecimalUpDown Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Value="{Binding DurationMinutes}"/>

            <Label Grid.Column="0" Grid.Row="3" VerticalAlignment="Center">Интенсивность</Label>
            <ComboBox Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" ItemsSource="{Binding Intensities}"/>

            <Label Grid.Column="0" Grid.Row="4" VerticalAlignment="Center">Дистанция</Label>
            <wpfTool:DecimalUpDown Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" Value="{Binding DistanceKm}"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Command="{Binding SaveCommand}">Сохранить</Button>
            <Button Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Command="{Binding CancelCommand}">Отмена</Button>
        </Grid>
    </Grid>
</Window>
