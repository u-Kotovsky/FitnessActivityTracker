<Window x:Class="FitnessActivityTrackerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessActivityTrackerUI"
        mc:Ignorable="d"
        Title="FitnessActivityTracker" Height="550" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        
        <!-- Calendar-like workout grid with color-indication of acitivty type -->
        <Grid Grid.Row="0">
            <DataGrid x:Name="DataGrid_Calendar" IsReadOnly="True" ItemsSource="{Binding CalendarItems}">
            </DataGrid>
        </Grid>
        
        <!-- List of coming workouts -->
        <Grid Grid.Row="1">
            <!-- Quick change of status -->
            <DataGrid IsReadOnly="true" SelectedItem="{Binding SelectedWorkout}" ItemsSource="{Binding ComingWorkouts}">
                
            </DataGrid>
        </Grid>
        
        <!-- Statistics panel -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!-- Progress graphs by time of workouts and calories -->
            <!-- Radial diagram, workout types -->
            <!-- Compare values by weeks/months -->
            <!-- Achivements and records -->
        </Grid>

        <!-- Add/Duplicate/Edit/Cancel workout -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Command="{Binding AddCommand}">Добавить</Button>
            <Button Grid.Column="1" Command="{Binding DuplicateCommand}">Дублировать</Button>
            <Button Grid.Column="2" Command="{Binding EditCommand}">Редактировать</Button>
            <Button Grid.Column="3" Command="{Binding CancelCommand}">Отменить</Button>
            <Button Grid.Column="4" Command="{Binding DeleteCommand}">Удалить</Button>
        </Grid>
    </Grid>
</Window>
